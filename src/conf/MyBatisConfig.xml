<?xml version="1.0" encoding="UTF-8" ?>


<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>


	<typeAliases>
		<typeAlias alias="JiKeUser" type="com.jike.mybatis.jikebook.JiKeUser" />
		<typeAlias alias="Author" type="com.jike.mybatis.jikebook.Author" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC">
			</transactionManager>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/jikebook" />
				<property name="username" value="root" />
				<property name="password" value="you" />
			</dataSource>
		</environment>
	</environments>
	

	<mappers>
		<mapper resource="conf/jikeUser.xml" />
		<mapper class="com.jike.mybatis.jikebook.InterfaceJiKeUserMap" />
		<mapper resource="conf/author.xml" />
	</mappers>

</configuration>
